<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lifeix.androidbasecoredemo.MainActivity" >

    <TextView
        android:id="@+id/txt_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btn_db_insert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_label"
        android:layout_margin="20dp"
        android:text="插入数据库" />

    <Button
        android:id="@+id/btn_db_query"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_db_insert"
        android:layout_margin="20dp"
        android:text="查询数据库" />

    <Button
        android:id="@+id/btn_imgLoad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_db_query"
        android:layout_margin="20dp"
        android:text="加载图片" />

    <Button
        android:id="@+id/btn_jump"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_imgLoad"
        android:layout_margin="20dp"
        android:text="页面跳转" />

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_jump"
        android:layout_centerHorizontal="true" />

</RelativeLayout>