<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.lifeix.androidbasecoredemo.view.CustomButton_
        android:id="@+id/btn_custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/app_name" />
    
    <Button
        android:id="@+id/btn_to_download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ToDownload" />

    <com.lifeix.androidbasecoredemo.view.TitleWithSubtitle_
        android:id="@+id/vg_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_html_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/btn_to_sub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ToSub" />

    <FrameLayout
        android:id="@+id/fl_sub_page"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>